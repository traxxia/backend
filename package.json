{
  "name": "traxxia-backend",
  "version": "1.0.0",
  "description": "Traxxia Business Analysis Platform - Backend API with MVC Architecture",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\""
  },
  "keywords": [
    "business-analysis",
    "questionnaire",
    "mvc",
    "express",
    "mongodb"
  ],
  "author": "Traxxia Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@azure/identity": "^4.11.1",
    "@azure/storage-blob": "^12.28.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "nodemonConfig": {
    "ignore": ["uploads/*", "*.test.js", "node_modules/"],
    "delay": "1000",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
